@using Newtonsoft.Json;
@using StarterKit.Views.Extensions
@{
    var Styles = new List<string>();
    var Scripts = new List<string>();
}

<% for (var css in htmlWebpackPlugin.files.css) { %>
@if (!string.IsNullOrEmpty("<%= htmlWebpackPlugin.files.css[css] %>"))
{
    var stylesVersion = IRazorPageExtensions.AddFileVersionToPath(this,"<%= htmlWebpackPlugin.files.css[css] %>");
    Styles.Add(stylesVersion);
}
<% } %>
<% for (var chunk in htmlWebpackPlugin.files.chunks) { %>
@if (!string.IsNullOrEmpty("<%= htmlWebpackPlugin.files.chunks[chunk].entry %>"))
{
    var fileversion = IRazorPageExtensions.AddFileVersionToPath(this, "<%= htmlWebpackPlugin.files.chunks[chunk].entry %>");
    Scripts.Add(fileversion);
}
<% } %>
<html lang="en" asp-prerender-module="ClientApp/dist/serverbundle" asp-prerender-data="@JsonConvert.SerializeObject(new { Styles, Scripts })">
