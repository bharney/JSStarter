{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "ResourceGroupName": {
      "type": "string"
    },
    "ResourceGroupLocation": {
      "type": "string"
    },
    "ADUserObjectId": {
      "type": "string"
    },
    "SPObjectId": {
      "type": "string"
    },
    "sqlUserName": {
      "type": "securestring"
    },
    "sqlPassword": {
      "type": "securestring"
    },
    "VaultEndpoint": {
      "type": "securestring"
    },
    "ClientSecret": {
      "type": "securestring"
    },
    "ClientId": {
      "type": "securestring"
    },
    "Token--Key": {
      "type": "securestring"
    },
    "Token--Issuer": {
      "type": "securestring"
    },
    "MailService--Key": {
      "type": "securestring"
    },
    "MailService--User": {
      "type": "securestring"
    },
    "BlobService--Key": {
      "type": "securestring"
    },
    "BlobService--Account": {
      "type": "securestring"
    },
    "SeedAccount--UserName": {
      "type": "securestring"
    },
    "SeedAccount--Password": {
      "type": "securestring"
    },
    "ConnectionStrings--DefaultConnection": {
      "type": "securestring"
    }
  },
  "variables": {
    "websiteUrl": "[concat('https://www.', parameters('ResourceGroupName'), '.azurewebsites.net')]",
    "AppName": "[concat(parameters('ResourceGroupName'), 'app')]",
    "Vault": "[concat(parameters('ResourceGroupName'), 'vault')]",
    "AppInsights": "[concat(parameters('ResourceGroupName'), 'appinsights')]",
    "Blob": "[concat(parameters('ResourceGroupName'), 'blob')]",
    "ServicePlan": "[concat(parameters('ResourceGroupName'), 'plan')]",
    "SqlServer": "[concat(parameters('ResourceGroupName'), 'sqlserver')]",
    "SqlDB": "[concat(parameters('ResourceGroupName'), 'DB')]"
  },
  "resources": [
    {
      "name": "[variables('AppInsights')]",
      "type": "Microsoft.Insights/components",
      "apiVersion": "2015-05-01",
      "location": "[parameters('ResourceGroupLocation')]",
      "kind": "web",
      "properties": {
        "Application_Type": "web"
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults",
      "name": "[variables('Vault')]",
      "apiVersion": "2016-10-01",
      "location": "[parameters('ResourceGroupLocation')]",
      "tags": {},
      "scale": null,
      "properties": {
        "sku": {
          "family": "A",
          "name": "standard"
        },
        "tenantId": "[subscription().tenantId]",
        "accessPolicies": [
          {
            "tenantId": "[subscription().tenantId]",
            "objectId": "[parameters('SPObjectId')]",
            "permissions": {
              "keys": [],
              "secrets": [
                "get",
                "list"
              ],
              "certificates": []
            }
          },
          {
            "tenantId": "[subscription().tenantId]",
            "objectId": "[parameters('ADUserObjectId')]",
            "permissions": {
              "keys": [],
              "secrets": [
                "get",
                "list",
                "set"
              ],
              "certificates": []
            }
          }
        ],
        "enabledForDeployment": false,
        "enabledForDiskEncryption": false,
        "enabledForTemplateDeployment": true
      },
      "dependsOn": [],
      "resources": [
        {
          "type": "secrets",
          "name": "SeedAccount--UserName",
          "apiVersion": "2016-10-01",
          "location": "[parameters('ResourceGroupLocation')]",
          "scale": null,
          "properties": {
            "attributes": {
              "enabled": true
            },
            "value": "[parameters('SeedAccount--UserName')]"
          },
          "dependsOn": [
            "[resourceId('Microsoft.KeyVault/vaults/', variables('Vault'))]"
          ]
        },
        {
          "type": "secrets",
          "name": "Token--Key",
          "apiVersion": "2016-10-01",
          "location": "[parameters('ResourceGroupLocation')]",
          "scale": null,
          "properties": {
            "attributes": {
              "enabled": true
            },
            "value": "[parameters('Token--Key')]"
          },
          "dependsOn": [
            "[resourceId('Microsoft.KeyVault/vaults/', variables('Vault'))]"
          ]
        },
        {
          "type": "secrets",
          "name": "Token--Issuer",
          "apiVersion": "2016-10-01",
          "location": "[parameters('ResourceGroupLocation')]",
          "scale": null,
          "properties": {
            "attributes": {
              "enabled": true
            },
            "value": "[parameters('Token--Issuer')]"
          },
          "dependsOn": [
            "[resourceId('Microsoft.KeyVault/vaults/', variables('Vault'))]"
          ]
        },
        {
          "type": "secrets",
          "name": "MailService--User",
          "apiVersion": "2016-10-01",
          "location": "[parameters('ResourceGroupLocation')]",
          "scale": null,
          "properties": {
            "attributes": {
              "enabled": true
            },
            "value": "[parameters('MailService--User')]"
          },
          "dependsOn": [
            "[resourceId('Microsoft.KeyVault/vaults/', variables('Vault'))]"
          ]
        },
        {
          "type": "secrets",
          "name": "SeedAccount--Password",
          "apiVersion": "2016-10-01",
          "location": "[parameters('ResourceGroupLocation')]",
          "scale": null,
          "properties": {
            "attributes": {
              "enabled": true
            },
            "value": "[parameters('SeedAccount--Password')]"
          },
          "dependsOn": [
            "[resourceId('Microsoft.KeyVault/vaults/', variables('Vault'))]"
          ]
        },
        {
          "type": "secrets",
          "name": "ConnectionStrings--DefaultConnection",
          "apiVersion": "2016-10-01",
          "location": "[parameters('ResourceGroupLocation')]",
          "scale": null,
          "properties": {
            "attributes": {
              "enabled": true
            },
            "value": "[parameters('ConnectionStrings--DefaultConnection')]"
          },
          "dependsOn": [
            "[resourceId('Microsoft.KeyVault/vaults/', variables('Vault'))]"
          ]
        },
        {
          "type": "secrets",
          "name": "MailService--Key",
          "apiVersion": "2016-10-01",
          "location": "[parameters('ResourceGroupLocation')]",
          "scale": null,
          "properties": {
            "attributes": {
              "enabled": true
            },
            "value": "[parameters('MailService--Key')]"
          },
          "dependsOn": [
            "[resourceId('Microsoft.KeyVault/vaults/', variables('Vault'))]"
          ]
        },
        {
          "type": "secrets",
          "name": "BlobService--Account",
          "apiVersion": "2016-10-01",
          "location": "[parameters('ResourceGroupLocation')]",
          "scale": null,
          "properties": {
            "attributes": {
              "enabled": true
            },
            "value": "[parameters('BlobService--Account')]"
          },
          "dependsOn": [
            "[resourceId('Microsoft.KeyVault/vaults/', variables('Vault'))]"
          ]
        },
        {
          "type": "secrets",
          "name": "BlobService--Key",
          "apiVersion": "2016-10-01",
          "location": "[parameters('ResourceGroupLocation')]",
          "scale": null,
          "properties": {
            "attributes": {
              "enabled": true
            },
            "value": "[parameters('BlobService--Key')]"
          },
          "dependsOn": [
            "[resourceId('Microsoft.KeyVault/vaults/', variables('Vault'))]"
          ]
        }
      ]
    },
    {
      "name": "[variables('SqlServer')]",
      "type": "Microsoft.Sql/servers",
      "location": "[parameters('ResourceGroupLocation')]",
      "apiVersion": "2014-04-01",
      "properties": {
        "administratorLogin": "[parameters('sqlUserName')]",
        "administratorLoginPassword": "[parameters('sqlPassword')]"
      },
      "resources": [
        {
          "name": "[variables('SqlDB')]",
          "kind": "v12.0,user",
          "type": "databases",
          "location": "[parameters('ResourceGroupLocation')]",
          "properties": {
            "collation": "SQL_Latin1_General_CP1_CI_AS",
            "maxSizeBytes": "2147483648",
            "zoneRedundant": false,
            "edition": "Basic"
          },
          "apiVersion": "2014-04-01",
          "dependsOn": [
            "[resourceId('Microsoft.Sql/servers/', variables('SqlServer'))]"
          ]
        },
        {
          "type": "firewallRules",
          "apiVersion": "2014-04-01",
          "dependsOn": [
            "[resourceId('Microsoft.Sql/servers/', variables('SqlServer'))]"
          ],
          "location": "[parameters('ResourceGroupLocation')]",
          "name": "AllowAppFirewallIps",
          "properties": {
            "endIpAddress": "0.0.0.0",
            "startIpAddress": "0.0.0.0"
          }
        },
        {
          "type": "firewallRules",
          "apiVersion": "2014-04-01",
          "dependsOn": [
            "[resourceId('Microsoft.Sql/servers/', variables('SqlServer'))]"
          ],
          "location": "[parameters('ResourceGroupLocation')]",
          "name": "AllowLocalIpAddress",
          "properties": {
            "startIpAddress": "71.198.42.196",
            "endIpAddress": "71.198.42.196"
          }
        }
      ]
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "sku": {
        "name": "Standard_LRS",
        "tier": "Standard"
      },
      "kind": "Storage",
      "name": "[variables('Blob')]",
      "apiVersion": "2018-03-01-preview",
      "location": "[parameters('ResourceGroupLocation')]",
      "tags": {},
      "scale": null,
      "properties": {
        "networkAcls": {
          "bypass": "AzureServices",
          "virtualNetworkRules": [],
          "ipRules": [],
          "defaultAction": "Allow"
        },
        "supportsHttpsTrafficOnly": false,
        "encryption": {
          "services": {
            "file": {
              "enabled": true
            },
            "blob": {
              "enabled": true
            }
          },
          "keySource": "Microsoft.Storage"
        }
      },
      "dependsOn": []
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "sku": {
        "name": "S1",
        "tier": "Standard",
        "size": "S1",
        "family": "S",
        "capacity": 1
      },
      "kind": "app",
      "name": "[variables('ServicePlan')]",
      "apiVersion": "2016-09-01",
      "location": "[parameters('ResourceGroupLocation')]",
      "scale": null,
      "properties": {
        "name": "[variables('ServicePlan')]"
      },
      "dependsOn": [],
      "resources": [

      ]
    },
    {
      "type": "Microsoft.Web/sites",
      "kind": "app",
      "name": "[variables('AppName')]",
      "apiVersion": "2015-08-01",
      "location": "[parameters('ResourceGroupLocation')]",
      "identity": {
        "principalId": null,
        "tenantId": null,
        "type": "SystemAssigned"
      },
      "scale": null,
      "properties": {
        "enabled": true,
        "hostNameSslStates": [
          {
            "name": "[concat(variables('AppName'),'.azurewebsites.net')]",
            "sslState": "Disabled",
            "virtualIP": null,
            "toUpdate": null,
            "hostType": "Standard"
          },
          {
            "name": "[concat(variables('AppName'),'.scm.azurewebsites.net')]",
            "sslState": "Disabled",
            "virtualIP": null,
            "toUpdate": null,
            "hostType": "Repository"
          }
        ],
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('ServicePlan'))]",
        "reserved": false,
        "siteConfig": null,
        "scmSiteAlsoStopped": false,
        "hostingEnvironmentProfile": null,
        "clientAffinityEnabled": true,
        "clientCertEnabled": false,
        "hostNamesDisabled": false,
        "containerSize": 0,
        "dailyMemoryTimeQuota": 0,
        "cloningInfo": null
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('ServicePlan'))]"
      ],
      "resources": [
        {
          "name": "appsettings",
          "type": "config",
          "apiVersion": "2015-08-01",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', variables('AppName'))]"
          ],
          "tags": {
            "displayName": "AppSettings"
          },
          "properties": {
            "ClientSecret": "[parameters('ClientSecret')]",
            "ClientId": "[parameters('ClientId')]",
            "VaultEndpoint": "[parameters('VaultEndpoint')]",
            "WEBSITE_NODE_DEFAULT_VERSION": "8.9.4"
          }
        }
      ]
    },
    {
      "apiVersion": "2015-01-01",
      "name": "[variables('AppName')]",
      "type": "Sendgrid.Email/accounts",
      "location": "[parameters('ResourceGroupLocation')]",
      "plan": {
        "name": "free",
        "publisher": "Sendgrid",
        "product": "sendgrid_azure",
        "promotionCode": ""
      },
      "properties": {
        "password": "[parameters('sqlPassword')]",
        "acceptMarketingEmails": true,
        "email": "[concat('info@', variables('AppName'), '.com')]",
        "firstName": "[variables('AppName')]",
        "lastName": "[variables('AppName')]",
        "company": "[variables('AppName')]",
        "website": "[variables('websiteUrl')]"
      }
    }
  ]
}
